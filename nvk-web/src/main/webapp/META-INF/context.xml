<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">

 <Resource name="NVKDS" auth="Container" type="javax.sql.DataSource"
    maxActive="50" maxIdle="30" maxWait="10000" username="${db.username}"
    password="${db.password}" driverClassName="com.mysql.jdbc.Driver"
    url="${db.url}" />
		
	<ResourceLink name="NVKDS" global="NVKDS"
		type="javax.sql.DataSource" />
</Context>	